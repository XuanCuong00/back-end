<div class="background__app">
    <span></span>
    <div class="login__main">
        <div class="login__main_in">
            <div class="text__login">
            Đăng ký
            </div>
            {{#if erro_up}}
            <div class="msg__login">
                <span><i class="fas fa-exclamation-triangle"></i> {{msg}}</span>
            </div>
            {{/if}}
            {{#if success}}
            <div class="msg__signup_done">
                <span><b>Đăng ký thành công!</b></span>
                <div><a href="/auth/login">Chuyển tới trang đăng nhập</a></div>
            </div>
            {{/if}}
            <form action="/auth/signup" method="POST">
                <div class="input__login">
                    <span>Tên tài khoản</span>
                    <input class="input__login_input" type="text" name="name1" placeholder="Nhập tên tài khoản" value="{{name1}}">
                </div>
                <div class="input__login">
                    <span>Họ và tên</span>
                    <input class="input__login_input" type="text" name="name_user" placeholder="Nhập tên của bạn" value="{{name_user}}" >
                </div>
                <div class="input__login">
                    <span>Mật khẩu</span>
                    <input class="input__login_input" type="password" name="pass" placeholder="Nhập mật khẩu">
                </div>
                <div class="input__login">
                    <span>Nhập lại mật khẩu</span>
                    <input class="input__login_input" type="password" name="pass2" placeholder="Nhập lại mật khẩu">
                </div>
                <div class="input__login">
                    <button id="btn__login" class="btn btn__login">Đăng ký</button>
                </div>
        </form>
        </div>
    </div>
    <script>
        var btnLogin = document.getElementById('btn__login');
        
        btnLogin.onclick = function () {
            btnLogin.innerHTML = `<i id="spinner" class="fa fa-spinner fa-pulse"></i> `
        }
    </script>
</div>